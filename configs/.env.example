# =============================================
# ALGO TRADER v3.0 - EJEMPLO DE CONFIGURACIÓN
# =============================================
# Copia este archivo como `configs/.env` y completa tus valores.
# Nunca subas tu `.env` real al repositorio.

# === APIs ===
TWELVEDATA_API_KEY=your_twelvedata_key
TWELVEDATA_EXCHANGE=Binance
# TWELVEDATA_SYMBOL=BTC/USD

# Telegram (opcional)
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# === IA (Ollama / OpenAI) ===
OLLAMA_API_BASE=http://localhost:11434/v1
OLLAMA_MODEL=deepseek-r1:14b
# OPENAI_API_KEY=your_openai_key

# === MetaTrader 5 ===
MT5_PATH=C:\\Program Files\\MetaTrader 5 EXNESS\\terminal64.exe
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=YourBroker-Demo
MT5_TIMEOUT=60000
MT5_DEVIATION=20
MT5_MAGIC=20250817
MT5_PORTABLE=0

# === Trading ===
LIVE_TRADING=false
SYMBOL=BTCUSDm
MIN_CONFIDENCE=0.75
MAX_RISK_PER_TRADE=0.02
MAX_PORTFOLIO_RISK=0.06
MAX_POSITIONS=3
MAX_DAILY_LOSS=200.0
DEF_SL_USD=50.0
DEF_TP_USD=100.0
PIP_VALUE=1.0
TIMEFRAMES=5min,15min,1h,4h,1day

# Gestión de riesgo avanzada (opcional)
SENSITIVITY=0.7
BASE_RISK=0.01
MAX_RISK=0.03
INITIAL_CAPITAL=10000.0
USE_ADAPTIVE_RISK=true
KELLY_FRACTION=0.2
MAX_DRAWDOWN=0.15
MAX_CONSECUTIVE_LOSSES=3

# Alertas (opcional)
ENABLE_CRITICAL_ALERTS=true
ALERT_ON_DIVERGENCE=true
ALERT_ON_DOUBLE_TOP=true
ALERT_ON_SUPPORT_BREAK=true
ALERT_ON_MOMENTUM_EXHAUSTION=true

# === Sistema ===
TZ=America/Bogota
DB_PATH=data/trading.db
LOG_LEVEL=INFO
POLL_SECONDS=20
