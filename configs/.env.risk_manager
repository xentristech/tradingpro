# === API KEYS ===
TWELVEDATA_API_KEY=4b8ba8b4e1984d5f8a91234567890abc
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# === IA Configuration ===
OLLAMA_API_BASE=http://localhost:11434/v1
OLLAMA_MODEL=deepseek-r1:14b

# === MetaTrader 5 ===
MT5_PATH=C:\\Program Files\\MetaTrader 5\\terminal64.exe
MT5_LOGIN=YOUR_MT5_LOGIN
MT5_PASSWORD=YOUR_MT5_PASSWORD
MT5_SERVER=YourBroker-Demo
MT5_TIMEOUT=60000
MT5_DEVIATION=20
MT5_MAGIC=20250817
MT5_PORTABLE=0

# === Trading Configuration ===
LIVE_TRADING=false
SYMBOL=BTCUSDm
TWELVEDATA_SYMBOL=BTC/USD
TWELVEDATA_EXCHANGE=Binance
DEF_SL_USD=50.0
DEF_TP_USD=100.0
PIP_VALUE=1.0
RISK_PER_TRADE=0.01
MAX_CONCURRENT_TRADES=1

# === System ===
TZ=America/Bogota
DB_PATH=data/trading.db
LOG_LEVEL=INFO

# === Enhanced Trading Bot V2 (optional) ===
SENSITIVITY=0.7
BASE_RISK=0.01
MAX_RISK=0.03
INITIAL_CAPITAL=10000.0

ENABLE_CRITICAL_ALERTS=true
ALERT_ON_DIVERGENCE=true
ALERT_ON_DOUBLE_TOP=true
ALERT_ON_SUPPORT_BREAK=true
ALERT_ON_MOMENTUM_EXHAUSTION=true

TIMEFRAMES=5min,15min,1h,4h,1day

USE_ADAPTIVE_RISK=true
KELLY_FRACTION=0.2
MAX_DRAWDOWN=0.15
MAX_DAILY_LOSS=0.05
MAX_CONSECUTIVE_LOSSES=3

# =============================================================================
# ADVANCED RISK MANAGER - BREAKEVEN & TRAILING STOP
# =============================================================================
# Activación de funciones (true/false para activar/desactivar)
ENABLE_BREAKEVEN=true
ENABLE_TRAILING_STOP=true
USE_AI_RISK_OPTIMIZATION=true

# === BREAKEVEN CONFIGURATION ===
# Pips de profit para activar breakeven
BREAKEVEN_TRIGGER_PIPS=20

# Pips adicionales sobre el precio de entrada (margen de seguridad)
BREAKEVEN_OFFSET_PIPS=2

# Profit mínimo en USD para aplicar breakeven
BREAKEVEN_MIN_PROFIT_USD=10

# === TRAILING STOP CONFIGURATION ===
# Pips de profit para activar trailing stop
TRAILING_ACTIVATION_PIPS=30

# Distancia del trailing stop en pips
TRAILING_DISTANCE_PIPS=15

# Paso mínimo para actualizar trailing (evita modificaciones excesivas)
TRAILING_STEP_PIPS=5

# Usar ATR para calcular distancia dinámica (true/false)
USE_ATR_TRAILING=true

# Multiplicador de ATR para trailing dinámico
ATR_MULTIPLIER=2.0

# === RISK MANAGER CONTROL ===
# Intervalo de verificación en segundos (30-60 recomendado)
RISK_CHECK_INTERVAL=30

# Modo conservador (aplica parámetros más seguros)
CONSERVATIVE_MODE=false

# === NOTIFICACIONES ===
# Notificar cuando se aplica breakeven
NOTIFY_BREAKEVEN=true

# Notificar cuando se actualiza trailing
NOTIFY_TRAILING=true

# Notificar estadísticas diarias
NOTIFY_DAILY_STATS=true

# === PARAMETROS POR SÍMBOLO (Opcional) ===
# Puedes configurar parámetros específicos por símbolo
# Formato: SYMBOL_PARAMETRO=valor

# Bitcoin
BTCUSD_BREAKEVEN_TRIGGER=30
BTCUSD_TRAILING_DISTANCE=20

# Forex
EURUSD_BREAKEVEN_TRIGGER=15
EURUSD_TRAILING_DISTANCE=10

GBPUSD_BREAKEVEN_TRIGGER=18
GBPUSD_TRAILING_DISTANCE=12

# Oro
XAUUSD_BREAKEVEN_TRIGGER=25
XAUUSD_TRAILING_DISTANCE=15

# === MODO DE OPERACIÓN ===
# Aplicar solo a trades manuales (false = aplicar a todos)
MANUAL_TRADES_ONLY=false

# Aplicar solo a trades del bot (true = solo trades con magic number)
BOT_TRADES_ONLY=true

# === HORARIOS DE OPERACIÓN ===
# Horario para aplicar gestión de riesgo (24h = siempre activo)
RISK_MANAGER_START_HOUR=0
RISK_MANAGER_END_HOUR=24

# Días de la semana (1=Lunes, 7=Domingo)
RISK_MANAGER_DAYS=1,2,3,4,5,6,7

# === MODO DEBUG ===
# Mostrar información detallada en logs
RISK_DEBUG_MODE=false

# Simular modificaciones sin ejecutarlas (para testing)
RISK_DRY_RUN=false
